{
  "compilerOptions": {
    // Project Structure
    "rootDir": "./src",
    "outDir": "./dist",
    // Modern JavaScript output
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    // Interoperability
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    // Strict Type-Checking (Bug Prevention)
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "noUncheckedIndexedAccess": true,
    // Performance
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts"
  ]
}
